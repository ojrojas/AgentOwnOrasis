// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"dependsOn": [
				"start:webview",
				"compile",
			],
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "start:webview",
			"group": "build",
			"dependsOn": [
				"npm: build:webview"
			],
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": "."
					}
				}
			],
			"isBackground": true,
			"label": "start:webview",
			"presentation": {
				"group": "watch",
				"reveal": "always"
			}
		},
		{
			"type": "npm",
			"script": "build:webview",
			"group": "build",
			"problemMatcher": [],
			"isBackground": true,
			"label": "npm: build:webview",
			"dependsOn": [],
			"presentation": {
				"group": "watch",
				"reveal": "always"
			}
		},
		{
			"label": "compile",
			"type": "npm",
			"group": "build",
			"script": "compile",
			"isBackground": true,
			"presentation": {
				"group": "watch",
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}