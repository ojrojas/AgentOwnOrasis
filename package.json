{
  "name": "agentownorasis",
  "displayName": "AgentOwnOrasis",
  "description": "Personal agent IA",
  "version": "0.0.1",
  "publisher": "orojasga",
  "engines": {
    "vscode": "^1.103.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./oroasis/out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "orasis-aii",
          "title": "Orasis IA",
          "icon": "resources/oroasisBotDark.png"
        }
      ],
      "secondarySidebar": [
        {
          "id": "oroasis-aii",
          "title": "Orasis IA",
          "icon": "resources/oroasisBotDark.png"
        }
      ]
    },
    "views": {
      "orasis-aii": [
        {
          "id": "oroasis.primary-sidebar-provider",
          "name": "",
          "icon": "resources/oroasisBotDark.png",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "oroasis.updateModels",
        "title": "Oroasis: Update Models"
      },
      {
        "command": "oroasis.helloWorld",
        "title": "Oroasis: Hello World"
      },
      {
        "command": "oroasis.createComment",
        "title": "Oroasis: Create Comment",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "oroasis.replyComment",
        "title": "Oroasis: Reply Comment",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "oroasis.editComment",
        "title": "Oroasis: Edit Comment",
        "icon": "$(edit)"
      },
      {
        "command": "oroasis.saveComment",
        "title": "Oroasis Save Comment"
      },
      {
        "command": "oroasis.cancelSaveComment",
        "title": "Oroasis: Cancel Save Comment"
      },
      {
        "command": "oroasis.deleteComment",
        "title": "Oroasis: Delete Comment",
        "icon": "$(trash)"
      },
      {
        "command": "oroasis.deleteAllComments",
        "title": "Oroasis Delete All Comments",
        "icon": "$(trash)"
      },
      {
        "command": "oroasis.openChatAgent",
        "title": "Oroasis: Open Chat Agent"
      },
      {
        "command": "oroasis.askAgent",
        "title": "Oroasis: Ask to Agent",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "oroasis.editAgent",
        "title": "Oroasis: Edit agent",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "oroasis.cleanChats",
        "title": "Cleaning chats"
      },
      {
        "command": "oroasis.cleanConfig",
        "title": "Cleaning configuration"
      },
      {
        "command": "oroasis.addNewChatButton",
        "title": "New Chat",
        "icon": "$(add)"
      },
      {
        "command": "oroasis.historyChatsButton",
        "title": "History Chat",
        "icon": "$(history)"
      },
      {
        "command": "oroasis.settingsChatsButton",
        "title": "Settings Chat",
        "icon": "$(settings)"
      }
    ],
    "configuration": {
      "title": "Oroasis Settings",
      "type": "object",
      "properties": {
        "oroasisSettings.baseUrlProvider": {
          "type": "string",
          "default": "http://127.0.0.1:11434",
          "description": "Write the 'Ollama' base url"
        },
        "oroasisSettings.ollamaListModels": {
          "type": "array",
          "description": "List of models from Ollama"
        },
        "oroasisSettings.modelDefault": {
          "type": [
            "string",
            null
          ],
          "default": null,
          "description": "Model asigned to request to ollama, the model can be for chat or code."
        },
        "oroasisSettings.modelCompletionDefault": {
          "type": [
            "string",
            null
          ],
          "default": null,
          "description": "Model asigned to request to ollama"
        },
        "oroasisSettings.modelTemperature": {
          "type": "number",
          "default": ".3",
          "description": "Model temperature asigned to request to ollama"
        },
        "oroasisSettings.roleAgentDefault": {
          "type": "string",
          "default": "assistant",
          "description": "The role of the message, either system, user, assistant, or tool"
        },
        "oroasisSettings.templatePromptGenerate": {
          "type": "string",
          "default": "You are my personal 'Agent IA', a highly skilled software engineer with extensive knowledge in many programming languages, frameworks, design patterns, and best practices, you are help me to resolve this question",
          "editPresentation": "multilineText",
          "description": "Template prompt use to generate"
        },
        "oroasisSettings.templatePromptAutoComplete": {
          "type": "string",
          "default": "You are an AI code completion engine. Complete the next line of code based on the context. Do not explain, do not add comments, do not add markdown language, do not add format highlight code, only return valid to context:",
          "editPresentation": "multilineText",
          "description": "Template prompt use to autocomplete suggestions"
        },
        "oroasisSettings.templatePromptRefactor": {
          "type": "string",
          "default": "You are an expert refactor engine. Improve refactorization to the following code for readability, performance, and best practices. Do not explain, do not add comments, do not add markdown language, do not add format highlight code, only return valid to context:",
          "editPresentation": "multilineText",
          "description": "Template prompt use to refactorize code, base on code actions"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "oroasis.addNewChatButton",
          "group": "navigation@1",
          "when": "view == oroasis.primary-sidebar-provider"
        },
        {
          "command": "oroasis.historyChatsButton",
          "group": "navigation@2",
          "when": "view == oroasis.primary-sidebar-provider"
        },
        {
          "command": "oroasis.settingsChatsButton",
          "group": "navigation@3",
          "when": "view == oroasis.primary-sidebar-provider"
        }
      ],
      "comments/comment/title": [
        {
          "command": "oroasis.editComment",
          "group": "group@1",
          "when": "commentController == oroasisCommentController"
        },
        {
          "command": "oroasis.deleteComment",
          "group": "group@2",
          "when": "commentController == oroasisCommentController && comment == canBeDeleteComment"
        }
      ],
      "commandPalette": [
        {
          "command": "oroasis.createComment",
          "when": "false"
        },
        {
          "command": "oroasis.replyComment",
          "when": "false"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "oroasis.askAgent",
          "group": "inline",
          "when": "commentController == oroasisCommentController && commentThreadIsEmpty"
        },
        {
          "command": "oroasis.editAgent",
          "group": "inline",
          "when": "commentController == oroasisCommentController && !commentThreadIsEmpty"
        },
        {
          "command": "oroasis.replyComment",
          "group": "inline",
          "when": "commentController == oroasisCommentController && !commentThreadIsEmpty"
        },
        {
          "command": "oroasis.cancelSaveComment",
          "group": "inline",
          "when": "commentController == oroasisCommentController"
        }
      ],
      "comments/comment/context": [
        {
          "command": "oroasis.editAgent",
          "group": "inline@1",
          "when": "commentController == oroasisCommentController && !commentThreadIsEmpty"
        },
        {
          "command": "oroasis.cancelSaveComment",
          "group": "inline@2",
          "when": "commentController == oroasisCommentController"
        }
      ],
      "comments/commentThread/title": [
        {
          "command": "oroasis.deleteAllComments",
          "group": "navigation",
          "when": "commentController == oroasisCommentController && !commentThreadIsEmpty"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "start:webview": "cd webview-chat && npm run start",
    "build:webview": "cd webview-chat && npm run build",
    "compile": "tsc -b ./",
    "watch": "tsc -b --watch ./",
    "lint": "eslint src",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "postinstall": "cd oroasis && npm install && cd ../webview-chat && npm install && cd ..",
    "clean": "rm -rf node_modules oroasis/out oroasis/node_modules oroasis/tsconfig.tsbuildinfo webview-chat/dist webview-chat/node_modules package-lock.json"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "diff": "^8.0.2",
    "uuid": "^11.1.0"
  }
}